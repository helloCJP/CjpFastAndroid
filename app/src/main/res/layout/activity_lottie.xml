<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="app/see.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="app/tj.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_fileName="app/vip.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:lottie_fileName="lottie/demo4.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:lottie_fileName="lottie/demo5.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:lottie_fileName="lottie/demo6.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/demo7"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"/>
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/eee"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:lottie_autoPlay="true"
           />
    </LinearLayout>

</ScrollView>