<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DiscoverLinearLayout">
        <attr name="discover_alpha" format="boolean"/>
        <attr name="discover_scaleX" format="boolean"/>
        <attr name="discover_scaleY" format="boolean"/>
        <attr name="discover_bgColorFrom" format="color"/>
        <attr name="discover_bgColorTo" format="color"/>
        <attr name="discover_translate" />
    </declare-styleable>

    <attr name="discover_translate">
        <flag name="left" value="0x01"/>
        <flag name="right" value="0x02"/>
        <flag name="top" value="0x04"/>
        <flag name="bottom" value="0x08"/>
    </attr>

    
</resources>